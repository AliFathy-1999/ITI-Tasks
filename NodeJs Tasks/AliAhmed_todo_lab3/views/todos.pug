doctype html
html(lang="en")
  head
    title #{pageTitle}
    link(link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
    rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
    crossorigin="anonymous")
  body
    section.container.my-4
      h3.text-center #{pageTitle}
      table.table.table-bordered
        thead
          tr
            th id
            th Title
            th Actions
        tbody
        if len==0
          tr.alert.alert-danger
            td.alert.alert-danger.text-center(colspan='3') No Tasks yet
        else
          each val in tasks
            tr
                td= val.id
                td= val.title 
                td
                    a.btn.btn-primary.mx-2(href=`/todos/${val.id}`) Show
                    a.btn.btn-warning.mx-2(href='/edit/') edit
                    a.btn.btn-danger.mx-2(href=`/todos/delete/${val.id}`) delete


