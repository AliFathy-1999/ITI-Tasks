doctype html
html(lang="en")
  head
    title #{pageTitle}
    link(link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
    rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
    crossorigin="anonymous")
    section.container.my-4
      h4.text-primary Single task
      table.table.table-stripped
        tbody
          tr
            td.fw-bold Task  Id : #{tasks.id}
          tr
            td.fw-bold.ms-5 Task Title : #{tasks.title} 
          tr
            td.fw-bold.ms-5 Task Status : #{tasks.status} 